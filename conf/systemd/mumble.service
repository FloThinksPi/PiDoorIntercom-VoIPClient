[Unit]
Description = Mumble Client  
Requires = systemd-user-sessions.service network.target sound.target
After = multi-user.target

[Service]
User = mumble-client
Group = mumble-client
Type = simple  
ExecStart = /home/mumble-client/bin/talkiepi
Restart = on-abort  
RestartSec = 5

[Install]
WantedBy = multi-user.target